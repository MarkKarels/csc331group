   </padding>
   <top>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button alignment="CENTER" contentDisplay="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#qbButtonPress" prefHeight="75.0" prefWidth="150.0" text="QB" textAlignment="CENTER">
